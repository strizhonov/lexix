<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.strizhonovapps.lexicaapp">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--For notifications-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
            android:name="com.orm.SugarApp"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name_content"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="DATABASE"
                android:value="LEXIX_DB.DB" />
        <meta-data
                android:name="VERSION"
                android:value="18" />
        <meta-data
                android:name="QUERY_LOG"
                android:value="true" />

        <activity android:name="com.strizhonovapps.lexicaapp.view.FromFileSavingBackgroundActivity" />
        <activity android:name="com.strizhonovapps.lexicaapp.view.TrainingActivity" />
        <activity android:name="com.strizhonovapps.lexicaapp.view.ModifyWordActivity" />
        <activity
                android:name="com.strizhonovapps.lexicaapp.view.AddWordFromOutsideActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name="com.strizhonovapps.lexicaapp.view.AddWordActivity" />
        <activity
                android:name="com.strizhonovapps.lexicaapp.view.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
                android:name="com.strizhonovapps.lexicaapp.notification.NotificationJobReceiver"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver
                android:name="com.strizhonovapps.lexicaapp.notification.WakeUpNotificationJobReceiver"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>